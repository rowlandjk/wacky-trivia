<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WackyTrivia.View.MainPage">
  <StackLayout>
    <StackLayout VerticalOptions="StartAndExpand">
      <Label Text="Wacky Trivia" FontSize="36" HorizontalOptions="Center" />
    </StackLayout>
    <StackLayout VerticalOptions="CenterAndExpand">
      <Button Text="Play Game" Clicked="PlayGame" />
      <Button Text="View Stats" Command="{Binding ViewStatsCommand}" />
    </StackLayout>
  </StackLayout>
</ContentPage>